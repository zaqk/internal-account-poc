
   
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Account {
  id              Int    @id @default(autoincrement())
  externalAddress String @unique
  internalAddress String @unique
  internalPk      String // Should be encrypted
}

